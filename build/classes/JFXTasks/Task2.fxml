        </ImageView>
        <TextField fx:id="aTextField" layoutX="262.0" layoutY="140.0" />
        <TextField fx:id="bTextField" layoutX="262.0" layoutY="182.0" />
        <Label layoutX="237.0" layoutY="144.0" text="a =" />
        <Label layoutX="237.0" layoutY="186.0" text="b =" />
